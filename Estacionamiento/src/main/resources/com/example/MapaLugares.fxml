<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.TilePane?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controllers.MapaLugaresController">

    <top>
        <BorderPane style="-fx-background-color: #ddd; -fx-padding: 10;">
            <left>
                <Button fx:id="btnRegresar" text="&lt; Regresar" onAction="#onRegresarClick" />
            </left>
            <center>
                <Label text="Seleccione un Lugar Disponible" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </center>
        </BorderPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <TilePane fx:id="panelLugares" hgap="10" vgap="10" prefColumns="5" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>